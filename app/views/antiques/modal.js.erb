function fillModal() {
  document.querySelector('#antique-show-modal').innerHTML = '';
  document.querySelector('#antique-show-modal').innerHTML = `<%= j render 'antiques/show_modal', antique: @antique, category: @category %>`;
  let swiper = new Swiper('.swiper-container', {
    loop: true,
    observer: true,
    observeParents: true,
    parallax:true,
    pagination: { el: '.swiper-pagination' },
    navigation: {
      nextEl: '.swiper-button-next',
      prevEl: '.swiper-button-prev',
    }
  });
  document.querySelector('#closeShowModalBtn').addEventListener('click', (e) => {
    document.querySelector('#antiqueShowModal').click();
    swiper.destroy();
  });
};

fillModal();

