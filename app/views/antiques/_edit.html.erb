<% if user_signed_in? %>
  <div class="container">
    <div class="edit-images-container">
      <% antique.images.each do |image| %>
        <div class="edit-image-div" id="edit-image-<%= image.id %>" style="background-image: url(<%= image.image_url(:card) %>);">
          <%= link_to "Delete", image_path(image), method: :delete, remote: true, class: 'delete-image-link' %>
        </div>
      <% end %>
    </div>
    <%= simple_form_for([category, antique], remote: true) do |f| %>
      <%= f.input :title, label: "Nom", placeholder: "Nom" %>
      <%= f.input :description, as: :text, input_html: {:rows => 6}, label: "Description", placeholder: "Description" %>
      <%#= f.association :category, as: :collection_select, selected: category, label: "Galerie" %>
      <label class="btn btn-outline-info" style="width: 100%;">
        Ajouter une photo <em> (10.5 Mb max.)</em>
        <span style="display:none;">
        <%= f.fields_for :images do |ff| %>
          <%= ff.file_field :image, multiple: true, name: "images[]" %>
        <% end %>
        </span>
      </label>
      <hr>
      <div class="d-flex justify-content-center">
        <%= f.submit "OK", class: "ok-modal btn btn-outline-info" %>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="container">
    <p>Vous n'avez pas accès à ces fonctions.</p>
  </div>
<% end %>
