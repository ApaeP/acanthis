<div class="loaded-content">
  <div class="loaded-images">


      <!-- Slider main container -->
      <div class="swiper-container loaded-swiper-container">
        <!-- Additional required wrapper -->
        <div class="swiper-wrapper">
          <% antique.images.each do |image| %>
            <div class="swiper-slide">
              <%= image_tag image.image_url(:show), alt: antique.title, class: 'loaded-image-tag' %>
            </div>
          <% end %>
        </div>
        <!-- If we need pagination -->
        <div class="swiper-pagination"></div>

        <!-- If we need navigation buttons -->
        <div class="swiper-button-prev"></div>
        <div class="swiper-button-next"></div>

      </div>

  </div>

  <div class="loaded-text">
    <h3><%= antique.title %></h3>
    <hr>
    <div class="loaded-text-description">
      <%= simple_format antique.description %>
    </div>
    <%= link_to "Next antique", modal_path(antique: antique, nav: 'next', category: category.title), remote: true %>
    <%= link_to "Previous antique", modal_path(antique: antique, nav: 'prev'), remote: true %>
  </div>
</div>


